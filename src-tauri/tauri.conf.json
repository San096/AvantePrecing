{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Avante Pricing",
  "version": "0.1.0",
  "identifier": "com.avante.precificacao",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Avante Pricing",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "../public/download.png"
    ]
  }
}
